{
    "compilerOptions": {
        "sourceMap": true,
        "noImplicitAny": false,
        "skipLibCheck": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "target": "es6",
        "module": "commonjs",
        "outDir": "./dist/",
        "baseUrl": "./source/",
        "lib": ["es2023", "dom"],
        "jsx": "react-jsx",
        "paths": {
            "@client/*": ["./@client/*"],
            "@game/*": ["./@game/*"],
            "@editor/*": ["./@editor/*"],
            "@overworld/*": ["./@overworld/*"],
            "@env/*": ["../../shared/@env/*"],
            "@shared/*": ["../../shared/@shared/*"]
        }
    },
    "include": [
        "./source/**/*",
        "../shared/@shared/types/defs"
    ]
}